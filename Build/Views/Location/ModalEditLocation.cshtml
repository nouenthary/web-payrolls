<!--Form Update-->
<div class="modal fade" id="modal-location-edit" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">

                <h2 class="modal-title text-primary card-text" style="font-weight:600" id="exampleModalLabel">
                    <i class="ti-pencil pr-2"></i>@Resources.Voucher.Edit @Resources.Voucher.Location
                </h2>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" action="" id="form-edit-location">
                <div class="modal-body">

                    <input type="hidden" class="form-control" id="PK_Location_Id" name="PK_Location_Id" />

                    <div class="form-group">
                        <label for="FK_Comp_ID_Edit">@Resources.Voucher.Company</label>
                        <select id="FK_Comp_ID_Edit" name="FK_Comp_ID_Edit" class="form-control">
                           
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="Loc_Name_Edit">@Resources.Voucher.Location <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="Loc_Name_Edit" name="Loc_Name_Edit" placeholder="@Resources.Voucher.Enter @Resources.Voucher.Location" required maxlength="50">
                        <div class="invalid-feedback" id="error_Loc_Name_Edit"></div>
                    </div>

                    <div class="form-group">
                        <label for="">@Resources.Voucher.Description</label>
                        <textarea class="form-control" id="Descr_Edit" name="Descr_Edit" placeholder="@Resources.Voucher.Enter @Resources.Voucher.Description" rows="4"></textarea>
                    </div>

                      @Html.AntiForgeryToken()
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-block" id="btn-update-location" style="background: #28a745; color: #fff; font-size: 20px">
                        <i class="ti-save-alt pr-2"></i>@Resources.Voucher.Update @Resources.Voucher.Location
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<!--Form Update-->