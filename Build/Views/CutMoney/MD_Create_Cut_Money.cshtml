<!--Form Create-->
<div class="modal fade" id="modal-add-cut-money" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header">

                <h3 class="modal-title text-primary card-text" id="exampleModalLabel" style="font-weight: 600">
                    <i class="ti-plus pr-2"></i>@Resources.Voucher.Add @Resources.Voucher.Wagededucts
                </h3>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close" >
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <form id="form-add-cut-money">
                <div class="modal-body">

                    <div class="form-group">
                        @Html.Label(@Resources.Voucher.HOD) <span class="text-danger">*</span>
                        @Html.DropDownList("manager_id", new SelectList(ViewBag.GetBoss, "PK_Boss_Id", "Name"), new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.Label(@Resources.Voucher.Company) <span class="text-danger">*</span>
                        <select class="form-control" id="company_id" name="company_id">
                            <option>-- @Resources.Voucher.Choose @Resources.Voucher.Company --</option>
                        </select>
                    </div>

                    <div class="form-group">
                        @Html.Label(@Resources.Voucher.LeaveType) <span class="text-danger">*</span>
                        @* @Html.TextBox("leave_type", null, new { @class = "form-control", placeholder = "Leave Type", maxlength = "50", onkeyup = "this.value=this.value.replace(/[^a-zA-Z]/g,'');" }) *@
                        <select id="leave_type" name="leave_type" class="form-control">
                            @foreach (var type in ViewBag.DeductMoney)
                            {
                                <option value="@type">@type</option>
                            }
                        </select>
                        <div class="invalid-feedback" id="error-type"></div>
                    </div>

                    <div class="form-group">
                        @Html.Label(@Resources.Voucher.Percent) <span class="text-danger">*</span>
                        @Html.TextBox("cut_money", null, new { @class = "form-control", placeholder = Resources.Voucher.Percent, maxlength = "20" })
                        <div class="invalid-feedback" id="error-money-cut"></div>
                    </div>

                    <div class="form-group">
                        @Html.Label(Resources.Voucher.Description)
                        @Html.TextArea("txt_desc", null, new { @class = "form-control", placeholder = Resources.Voucher.Enter +" "+ Resources.Voucher.Description , rows = "4", maxLength= 50 })
                    </div>

                    @Html.AntiForgeryToken()
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-block" id="btn-save-money" style="background: #28a745; color: #fff; font-size: 20px" >
                        <i class="ti-save-alt pr-2"></i>@Resources.Voucher.Add @Resources.Voucher.Wagededucts
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<!--Form Create-->