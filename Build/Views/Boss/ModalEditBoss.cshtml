<!--Form Edit-->
<div class="modal fade" id="modal-boss-edit" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title text-primary card-text" style="font-weight:600;" id="exampleModalLabel">
                    <i class="ti-user pr-2"></i>@Resources.Voucher.Edit @Resources.Voucher.HOD
                </h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <form method="post" action="" id="form-boss-edit">
                <div class="modal-body">

                    <input type="hidden" id="PK_Boss_Id" name="PK_Boss_Id" class="form-control" />

                    <div class="row">
                        <div class="col-md-6">

                            <div class="form-group">
                                <label for="Code_Edit">@Resources.Voucher.Code</label>
                                <div class="row pl-3 pr-3">
                                    <input type="text" class="form-control col-md-6" id="Code_Edit" name="Code_Edit" placeholder="@Resources.Voucher.Code" readonly="readonly">
                                    <button type="button" style="background : #fff ; border: 1px solid #ced4da" class="btn col-md-6" disabled>@Resources.Voucher.Generate</button>
                                </div>
                                <div class="invalid-feedback" id="error-code-edit"></div>
                            </div>

                            <div class="form-group">
                                <label for="Name_Edit">@Resources.Voucher.Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="Name_Edit" name="Name_Edit" placeholder="@Resources.Voucher.Enter @Resources.Voucher.Name" required maxlength="50">
                                <div class="invalid-feedback" id="error-name-edit"></div>
                            </div>

                            <div class="form-group">
                                <label for="Phone_Edit">@Resources.Voucher.Phone <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="Phone_Edit" name="Phone_Edit" placeholder="@Resources.Voucher.Enter @Resources.Voucher.Phone" required maxlength="20">
                                <div class="invalid-feedback" id="error-phone-edit"></div>
                            </div>

                            <div class="form-group">
                                <label for="Status_Edit">@Resources.Voucher.Status</label>
                                <select class="form-control" id="Status_Edit" name="Status_Edit">
                                    <option value="Enable">@Resources.Voucher.Enable</option>
                                    <option value="Disabled">@Resources.Voucher.Disabled</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="Address_Edit">@Resources.Voucher.Address</label>
                                <textarea class="form-control" id="Address_Edit" name="Address_Edit" placeholder="@Resources.Voucher.Enter @Resources.Voucher.Address" rows="4"></textarea>
                            </div>

                        </div>

                        <div class="col-md-6">
                            <div class="form-group text-center">
                                <img style="height: 270px"
                                     src="~/Content/images/avatar.png"
                                     alt="me" class="img-thumbnail"
                                     id="photo-view-edit"
                                     onerror="this.src=src='@Url.Content("~/Content/images/avatar.png")'"
                                     >
                            </div>

                            <div class="form-group">
                                <input accept="image/png, image/jpeg, image/gif" type="file" class="form-control" id="photo-boss-edit" required>
                                <div class="invalid-feedback" id="error-file-edit"></div>
                                <input type="hidden" id="Picture_Edit" name="Picture_Edit" />
                            </div>
                        </div>

                    </div>
                 
                      @Html.AntiForgeryToken()
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-block" id="btn-update-boss" style="background: #28a745; color: #fff; font-size: 20px">
                        <i class="ti-save-alt pr-2"></i>@Resources.Voucher.Update @Resources.Voucher.HOD
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<!--Form Edit-->