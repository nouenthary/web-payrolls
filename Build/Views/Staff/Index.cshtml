@{
  ViewBag.Title = "Employee";
  ViewBag.Page = "Employee";
}

<div class="card" style="margin-bottom: 10px">
  <div class="card-header">
    <div class="card-actions">
      <a class="" data-action="collapse"><i class="ti-minus"></i> Show / Hide</a>
    </div>
    <h4 class="card-title m-b-0"><i class="ti-filter"></i> Filter</h4>
  </div>
  <div class="card-body collapse show b-t">
    <div>
      <div class="row">

        <div class="form-group col-xlg-3 col-md-4 col-sm-12">
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">Boss</span>
            </div>

            <select name="ddlBoss" id="ddlBoss" class="form-control" aria-invalid="false">
              <option value="0">-- All Bosses --</option>
              @foreach (var boss in ViewBag.Manager)
              {
                <option value="@boss.PK_Boss_Id">@boss.Name</option>
              }
            </select>
          </div>
        </div>

        <div class="form-group col-xlg-3 col-md-4 col-sm-12">
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">Company</span>
            </div>

            <select id="ddlCompany" name="ddlCompany" class="form-control">
              <option value="0">-- All Companies --</option>
            </select>
          </div>
        </div>

        <div class="form-group col-xlg-3 col-md-4 col-sm-12">
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">Location</span>
            </div>

            <select id="ddlLocation" name="ddlLocation" class="form-control">
              <option value="0">-- All Loacations --</option>
            </select>
          </div>
        </div>

        <div class="form-group col-xlg-3 col-md-4 col-sm-12">
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">Dept</span>
            </div>

            <select id="ddlDepartment" name="ddlDepartment" class="form-control">
              <option value="0">-- All Departments --</option>
            </select>
          </div>
        </div>

        <div class="form-group col-xlg-3 col-md-4 col-sm-12">
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">Position</span>
            </div>

            <select id="ddlPosition" name="ddlPosition" class="form-control">
              <option value="0">-- All Positions --</option>
            </select>
          </div>
        </div>

        <div class="form-group col-xlg-3 col-md-4 col-sm-12">
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">Sal.Type</span>
            </div>

            <select id="ddlSalaryType" name="ddlSalaryType" class="form-control">
              <option value="">-- All Salary Type --</option>
              <option value="Sibong">Sibong</option>
              <option value="Daily">Daily</option>
              <option value="Monthly">Monthly</option>
            </select>
          </div>
        </div>

        <div class="form-group col-xlg-3 col-md-4 col-sm-12">
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">Status</span>
            </div>

            <select id="ddlStatus" name="ddlStatus" class="form-control">
              <option value="">-- All Status --</option>
              <option value="Enable">Enable</option>
              <option value="Disable">Disable</option>
            </select>
          </div>
        </div>

        <div class="form-group col-xlg-3 col-md-4 col-sm-12">
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">Search</span>
            </div>
            <input type="text" name="txbTextSearch" id="txbTextSearch" class="form-control" data-validation-required-message="This field is required" aria-invalid="false" placeholder="Seaching here ..." value="@ViewBag.Filter">
          </div>
        </div>

        <div class="form-group col-xlg-3 col-md-3">
          <button class="btn btn-info" id="btnSearch"><i class="ti-search pr-2"></i>Search</button>
        </div>
      </div>
    </div>
  </div>
</div>

