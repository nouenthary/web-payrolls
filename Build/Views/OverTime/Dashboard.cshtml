<div class="row">
    <!-- Column -->
    <div class="col-lg-3 col-md-6">
        <div class="card">
            <div class="d-flex flex-row">
                <div class="p-10 bg-info">
                    <h3 class="text-white box m-b-0"><i class="ti-user"></i></h3></div>
                <div class="align-self-center m-l-20">
                    <h3 class="m-b-0 text-info" id="lblEmployee">0</h3>
                    <span class="text-muted m-b-0">@Resources.Voucher.Employee @Resources.Voucher.Overtime</span></div>
            </div>
        </div>
    </div>
    <!-- Column -->
    <!-- Column -->
    <div class="col-lg-3 col-md-6">
        <div class="card">
            <div class="d-flex flex-row">
                <div class="p-10 bg-primary">
                    <h3 class="text-white box m-b-0"><i class="ti-time"></i></h3></div>
                <div class="align-self-center m-l-20">
                    <h3 class="m-b-0 text-primary" style="color: #7460ee" id="lblHour">0</h3>
                    <span class="text-muted m-b-0">@Resources.Voucher.OverTimeHour</span></div>
            </div>
        </div>
    </div>
    <!-- Column -->
    <!-- Column -->
    <div class="col-lg-3 col-md-6">
        <div class="card">
            <div class="d-flex flex-row">
                <div class="p-10 bg-success">
                    <h3 class="text-white box m-b-0"><i class="ti-reload"></i></h3></div>
                <div class="align-self-center m-l-20">
                    <h3 class="m-b-0 text-success" id="lblPadding">0</h3>
                    <span class="text-muted m-b-0">@Resources.Voucher.Pending</span></div>
            </div>
        </div>
    </div>
    <!-- Column -->
    <!-- Column -->
    <div class="col-lg-3 col-md-6">
        <div class="card">
            <div class="d-flex flex-row">
                <div class="p-10 bg-danger">
                    <h3 class="text-white box m-b-0"><i class="ti-close"></i></h3></div>
                <div class="align-self-center m-l-20">
                    <h3 class="m-b-0 text-danger" id="lblRejected">0</h3>
                    <span class="text-muted m-b-0">@Resources.Voucher.Rejected</span></div>
            </div>
        </div>
    </div>
    <!-- Column -->
</div>