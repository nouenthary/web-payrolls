<!--Form Edit-->
<div class="modal fade" id="modal-supplier-update" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">

                <h2 class="modal-title text-primary card-text" style="font-weight:600" id="exampleModalLabel">
                    <i class="ti-pencil pr-2"></i>@Resources.Voucher.Edit @Resources.Voucher.Supplier
                </h2>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" action="" id="form-edit-supplier">
                <div class="modal-body">

                    <input type="hidden" id="supp-id-edit" class="form-control" name="supp-id-edit" />

                    <input type="hidden" id="sup_location_edit" class="form-control" name="sup_location_edit" />

                    <div class="form-group">
                        <label for="">@Resources.Voucher.Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="supplier-edit" name="supplier-edit" placeholder="@Resources.Voucher.Enter @Resources.Voucher.Name" required maxlength="50">
                        <div class="invalid-feedback" id="error-supplier-edit"></div>
                    </div>

                    <div class="form-group">
                        <label for="">@Resources.Voucher.Phone <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="phone-edit" name="phone-edit" placeholder="@Resources.Voucher.Enter @Resources.Voucher.Phone" required maxlength="20">
                        <div class="invalid-feedback" id="error-phone-edit"></div>
                    </div>

                    <div class="form-group">
                        <label for="">@Resources.Voucher.Address</label>
                        <textarea class="form-control" id="address-edit" name="address-edit" placeholder="@Resources.Voucher.Enter @Resources.Voucher.Address" rows="4"></textarea>
                    </div>

                    @Html.AntiForgeryToken()
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-block" id="btn-update-supplier" style="background: #28a745; color: #fff; font-size: 20px">
                        <i class="ti-save-alt pr-2"></i>@Resources.Voucher.Update @Resources.Voucher.Supplier
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<!--Form Edit-->
