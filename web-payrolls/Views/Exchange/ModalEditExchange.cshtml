<!--Form Create-->
<div class="modal fade" id="modal-exchange-edit" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">

                <h2 class="modal-title text-primary card-text" style="font-weight:600" id="exampleModalLabel">
                    <i class="ti-pencil pr-2"></i>@Resources.Voucher.Edit @Resources.Voucher.Exchange
                </h2>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="#" id="form-edit-exchange">
                <div class="modal-body">
                    @Html.AntiForgeryToken()

                    @Html.TextBox("exchange_id", null ,new {@class = "form-control" , type = "hidden"})

                    @Html.Hidden("ex_company_edit")

                    <div class="form-group">
                        @Html.Label(Resources.Voucher.Currency) <span class="text-danger">*</span>
                        @Html.TextBox("ex_name_edit", null, new { @class = "form-control", placeholder = Resources.Voucher.Currency, maxlength = "50", required = true })
                        <div class="invalid-feedback" id="error-ex-name-edit"></div>
                    </div>

                    <div class="form-group">
                        @Html.Label(Resources.Voucher.Rate) <span class="text-danger">*</span>
                        @Html.TextBox("ex_rate_edit", null, new { type = "number", @class = "form-control", placeholder = Resources.Voucher.Rate, maxlength = "10", required = true })
                        <div class="invalid-feedback" id="error-ex-rate-edit"></div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-block" id="btn-update-exchange" style="background: #28a745; color: #fff; font-size: 20px">
                        <i class="ti-save-alt pr-2"></i>@Resources.Voucher.Update @Resources.Voucher.Exchange
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<!--Form Create-->