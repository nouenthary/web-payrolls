<!--Form Create-->
<div class="modal fade" id="modal-exchange-create" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">

                <h2 class="modal-title text-primary card-text" style="font-weight:600" id="exampleModalLabel">
                    <i class="ti-plus pr-2"></i>@Resources.Voucher.Add @Resources.Voucher.Exchange
                </h2>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="#" action="#" id="form-add-exchange">
                <div class="modal-body">

                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        @Html.Label(Resources.Voucher.HOD)
                        <select id="ex_manager" name="ex_manager" class = "form-control" > 
                            <option value="">-- @Resources.Voucher.Choose @Resources.Voucher.HOD --</option>
                            @foreach (var item in ViewBag.GetBoss) {
                                <option value="@item.PK_Boss_Id">@item.Name</option>
                            }
                        </select>
                    @*    @Html.DropDownList("ex_manager", new SelectList(ViewBag.GetBoss, "PK_Boss_Id", "Name"), new { @class = "form-control" })*@
                    </div>

                    <div class="form-group">
                        @Html.Label(Resources.Voucher.Company) <span class="text-danger">*</span>

                        @Html.DropDownList("ex_company",
                                            new[] { new SelectListItem() { Text = "--"+ Resources.Voucher.Choose + " "+ Resources.Voucher.Company + " --", Value = "", Selected = true } },
                                            new {@class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.Label(Resources.Voucher.Currency) <span class="text-danger">*</span>
                        @Html.TextBox("ex_name", null, new { @class = "form-control", placeholder = Resources.Voucher.Currency, maxlength = "50", required = true })
                        <div class="invalid-feedback" id="error-ex-name"></div>
                    </div>

                    <div class="form-group">
                        @Html.Label(Resources.Voucher.Rate) <span class="text-danger">*</span>
                        @Html.TextBox("ex_rate", null, new { type = "number", @class = "form-control", placeholder = Resources.Voucher.Rate, maxlength = "10", required = true })
                        <div class="invalid-feedback" id="error-ex-rate"></div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-block" id="btn-save-exchange" style="background: #28a745; color: #fff; font-size: 20px">
                        <i class="ti-save-alt pr-2"></i>@Resources.Voucher.Add @Resources.Voucher.Exchange
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<!--Form Create-->