<!--Form Create-->
<div class="modal fade" id="modal_dept_create" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"><i class="ti-user pr-2"></i>Add Department Form</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" action="">
                <div class="modal-body">

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="boss">Boss:</label>
                                <select name="ddlAddBoss" id="ddlAddBoss" class="form-control" aria-invalid="false">
                                    <option value="0">-- All Bosses --</option>
                                    @foreach (var boss in ViewBag.Manager)
                                    {
                                        <option value="@boss.PK_Boss_Id">@boss.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label for="staff_transaction">Company:</label>
                                <select id="ddlAddCompany" name="ddlAddCompany" class="form-control">
                                    <option value="0">-- All Companies --</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="comp_name">Location:</label>
                                <select id="ddlAddLocation" name="ddlAddLocation" class="form-control">
                                    <option value="0">-- All Locations --</option>
                                </select>
                                <div class="invalid-feedback" id="msg_location"></div>
                            </div>
                            <div class="col-md-6">
                                <label for="staff_transaction">Staff Transaction:</label>
                                <select name="ddlStaffTransaction" id="ddlStaffTransaction" class="form-control">
                                    <option value="2">2</option>
                                    <option value="4">4</option>
                                </select>
                                <div class="invalid-feedback" id="msg_staff_transaction"></div>
                            </div>
                        </div>
                        
                    </div>

                    <div class="form-group">
                        <label for="comp_name">Department Name:</label>
                        <input type="text" class="form-control" id="txbDeptName" name="txbDeptName" placeholder="Department name..." required maxlength="50">
                        <div class="invalid-feedback" id="msg_Dept_Name"></div>
                    </div>

                    <div class="form-group">
                        <label for="description">Description:</label>
                        <textarea class="form-control" id="txbDescription" name="txbDescription" placeholder="Description..." rows="4"></textarea>
                    </div>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="ti-close pr-2"></i>Close</button>
                    <button type="button" class="btn" id="btn_save_department" style="background: #28a745; color: #fff"><i class="ti-plus pr-2"></i>Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!--Form Create-->