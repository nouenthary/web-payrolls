<!--Form Edit-->
<div class="modal fade" id="modal_company_edit" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog  modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"><i class="ti-user pr-2"></i>Update Company Form</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" action="">
                <div class="modal-body">
                    <input type="hidden" id="dbPhoto" class="form-control" />
                    <input type="hidden" id="comp_id" class="form-control" />
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="form-group text-center">
                                    <img style="height: 270px"
                                         src="~/Content/images/no-image.jpg"
                                         alt="me" class="img-thumbnail"
                                         id="photo-view-response-edit"
                                         onerror="this.src=src='@Url.Content("~/Content/images/no-image.jpg")'">
                                </div>

                                <div class="form-group">
                                    <input accept="image/png, image/jpeg, image/gif" type="file" class="form-control" id="photo-edit" required>
                                    <div class="invalid-feedback" id="error-file-edit"></div>
                                    <input type="hidden" id="name-photo-edit" />
                                    <input type="hidden" id="hdPreviewCompanyPhoto" name="hdPreviewCompanyPhoto" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label for="boss">HOD:<span class="text-danger">*</span></label>
                                        <select name="boss_id_edit" id="boss_id_edit" class="form-control" aria-invalid="false">
                                            <option value="0">-- All HODs --</option>
                                            @foreach (var boss in ViewBag.Manager)
                                            {
                                                <option value="@boss.PK_Boss_Id">@boss.Name</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="staff_transaction">Staff Transaction:</label>
                                        <select name="staff_transaction" id="staff_transaction_edit" class="form-control">
                                            <option value="2">2</option>
                                            <option value="4">4</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="comp_name">Company Name:<span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="comp_name_edit" name="comp_name_edit" placeholder="Company name..." required maxlength="50">
                                <div class="invalid-feedback" id="msg_company_name_edit"></div>
                            </div>

                            <div class="form-group">
                                <label for="description">Description:</label>
                                <textarea class="form-control" id="description_edit" name="description_edit" placeholder="Description..." rows="4"></textarea>
                            </div>
                        </div>
                    </div>


                    @Html.AntiForgeryToken()
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="ti-close pr-2"></i>Close</button>
                    <button type="button" class="btn" id="btn_update_company" style="background: #28a745; color: #fff"><i class="ti-plus pr-2"></i>Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!--Form Edit-->