@using PagedList.Mvc
@model  PagedList.IPagedList<web_payrolls.Models.GetAllTransferBalance_Result>

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css"/>

<div style="padding: 5px 0 ; float: right">
  <a href="@Url.Action("Index", "Transfer")" class="btn btn-dropbox btn-sm text-white"><i class="ti-shopping-cart"></i> Transfer</a>
  <a class="btn btn-default btn-sm" id="btn-export"><i class="ti-export"></i> Export</a>
</div>

Show :
<label for="pageSize_"></label>
<select class="custom-select-form" id="pageSize_" name="pageSize_" style="margin-top: 3px">
  <option value="10">10</option>
  <option value="20">20</option>
  <option value="30">30</option>
  <option value="50">50</option>
  <option value="100">100</option>
  <option value="500">ALL</option>
</select> Entries

<div class="table-responsive m-t-0 bg-white">
  <table class="table table-sm text-center table-bordered" id="table-transfer-balance">
    <thead class="text-capitalize font-weight-bold table-header-shadow">
    <tr style="border: 1px solid #f3f1f1">
      <td>No.</td>
      <td>HOD</td>
      <td>Location</td>
      <td>Type</td>
      <td>Type_Name</td>
      <td>Product</td>
      <td>Color</td>
      <td>Size</td>
      <td>Grade</td>
      <td>Measure</td>
      <td>Code</td>
      <td>Barcode</td>
      <td>Qr_Code</td>
      <td>QTY</td>
    </tr>
    </thead>
    <tbody>
    @{ var rowNo = 0; }
    @foreach (var row in Model)
    {
      <tr>
        <td style="width: 80px">@(rowNo += 1)</td>
        <td>@row.Boss</td>
        <td>@row.Location</td>
        <td>
          <span class="label label-success">@row.Type</span>
        </td>
        <td>
          <span class="">@row.TypeName</span>
        </td>
        <td>@row.Product</td>
        <td>@row.Color</td>
        <td>@row.Size</td>
        <td>@row.Grade</td>
        <td>@row.Measure</td>
        <td>@row.Code</td>
        <td>@row.QrCode</td>
        <td>@row.Bacode</td>
        <td>@row.Qty</td>
      </tr>
    }
    </tbody>
  </table>

</div>

<div class="pagination">
  <div class="">
    <span> Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount</span>
    <span>
      @Html.PagedListPager(Model, page => Url.Action("TransferBalance", "Transfer", new {page}))
    </span>

  </div>
</div>
