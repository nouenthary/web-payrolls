<!--Form Update-->
<div class="modal fade" id="modal-update-forget" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h3 class="modal-title text-primary card-text" id="exampleModalLabel" style="font-weight: 600">
                    <i class="ti-pencil pr-2"></i>@Resources.Voucher.Edit @Resources.Voucher.Forget
                </h3>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <form action="#" id="form-update-forget">
                <div class="modal-body">

                    @Html.Hidden("txt_forget_id")

                    <div class="form-group">
                        <img style="height: 270px; width: 100%" src="/Content/images/no-image.jpg" alt="me" class="img-thumbnail" id="photo-view-forget-edit" onerror="this.src=src='@Url.Content("~/Content/images/no-image.jpg")'">
                        <input type="file" id="photo_fotget_edit" style="display: none" />
                        <input type="hidden" id="txt_photo_forget_edit" name="txt_photo_forget_edit" />
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="">@Resources.Voucher.Date<span class="text-danger">*</span></label><br />
                            <input type="date" class="form-control" id="txt_date_forget_edit" name="txt_date_forget_edit">
                            <div class="invalid-feedback" id="error-date-forget"></div>
                        </div>

                        <div class="form-group col-md-6">
                            <label for="">@Resources.Voucher.Price<span class="text-danger">*</span></label><br />
                            <input type="text" class="form-control" id="txt_price_forget_edit" name="txt_price_forget_edit" maxlength="20" >
                            <div class="invalid-feedback" id="error-price-forget"></div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="">@Resources.Voucher.Description</label>
                        <textarea class="form-control" id="desc_forget_edit" name="desc_forget_edit" placeholder="@Resources.Voucher.Description" rows="4"></textarea>
                    </div>

                    @Html.AntiForgeryToken()
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-block" id="btn-update-forget" style="background: #28a745; color: #fff; font-size: 20px">
                        <i class="ti-save-alt pr-2"></i>@Resources.Voucher.Update @Resources.Voucher.Forget
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<!--Form Update-->
