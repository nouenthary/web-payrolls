<div id="show-stock-balance"></div>

@section Javascript{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-3-typeahead/4.0.2/bootstrap3-typeahead.min.js"></script>
}

@section Scripts
{
    <script>
    $(function (){
        let token = $('input[name="__RequestVerificationToken"]').val();
      
        let bid = $('#txt_bid');
        let cid = $('#txt_company');
        let types = $('#txt_product_type');
        let typeName = $('#txt_product_type_name');
        let product = $('#txt_product_name');
        let grade = $('#txt_grade');
        let color = $('#txt_color');
        let size = $('#txt_size');
        let barcode = $('#txt_barcode');
        let qrCode = $('#txt_qrCode'); 
        let type = $('#txt_type');
        let status = $('#txt_status');
        
        // method 
        function GetSearchObject() {              
               return {
                   bid: bid.val(),
                   cid: cid.val(),
                   types: types.val(),
                   typeName: typeName.val(),
                   product : product.val(),
                   grade: grade.val(),    
                   barcode: barcode.val(),
                   qrCode : qrCode.val(),
                   color: color.val(),
                   size : size.val(),
                   type: type.val(),
                   status: status.val()             
               }
         }        
        
         // Stock Balance
          function LoadStockBalance() {
              let objSearch = GetSearchObject();console.log(objSearch)
              $('#show-stock-balance').load('/StockBalance/GetTable', {
                  ...objSearch,
                  pageSize: $('#pageSize').val()
              });             
          }        
                             
           LoadStockBalance();
           // click search       
           $('#btn-search-stock-balance').click(function (){
               LoadStockBalance();
           });
           
          // Export
           $(document).on('click', '#show-stock-balance #btn-export-stock-balance', function () {
              $('#table-stock-balance').csvExport();
          });
          
           // page size
           $(document).on('change', '#show-stock-balance #pageSizeB', function () {
               let objSearch = GetSearchObject();
               $('#show-stock-balance').load('/StockBalance/GetTable', {
                   pageSize: $(this).val(),
                   ...objSearch
               });
           });
           
           // pagination
           $(document).on('click', '#show-stock-balance a', function (e) {
               try {
                   let link = $(this).attr("href").split('=');
                   let objSearch = GetSearchObject();
                   $('#show-stock-balance').load('/StockBalance/GetTable', {
                       pageSize: $('#pageSizeB').val(),
                       page: link[1],
                       ...objSearch
                   });
                   e.preventDefault();
               } catch (ex) {
               }
           });                       
          // Stock Balance
          
          // preview image
           $(document).on('click','#table-stock-balance tbody img',function (){
               $('#Modal-View-Photo').modal('show');
               $('#image-card-view').attr('src',$(this).attr('src'));
           });
           
           // get data from api
          function GetDataApi(url, data) {
             let dataResponse = null;
             let error = false;
             $.ajax({
               url: url,
               async: false,
               type: "POST",
               global: false,
               dataType: 'json',             
               data: data,
               success: function(response) {                  
                  dataResponse = response 
               },
               error: function() {
                 error =  true 
               }
             });                           
             return {data: dataResponse, error};
         }         
                     
         // get select option
         function setToSelect({data : data, label : label}) {                               
               let option = '<option value="">-- ' + 'Choose ' +  label + ' --</option>';
               for(let item in data){
                   option += '<option value="'+data[item].key+'">' + data[item].value + '</option>'; 
               }
               return option;
         }
        
         // get option
        function GetLabelOption(label){
              return "<option value=''>-- Choose " + label + " --</option>";
        }
         
       // Area Searching
      
       // HOD 
       bid.change(function (){
             let json = {
                  id: $(this).val(),
                  __RequestVerificationToken: token 
             };
             
             let {data} = GetDataApi("/Other/GetCompany", json);
                                  
             let list = setToSelect({data : data, label: 'Company'});
             
             cid.html(list); 
             
             typeName.html(GetLabelOption("Type Name"));
             product.html(GetLabelOption("Product Name"));
             grade.html(GetLabelOption("Grade"));
             color.html(GetLabelOption("Color"));
             size.html(GetLabelOption("Size"));
             
             barcode.val("");
             qrCode.val('');
                          
             $("#txt_type option:first").attr('selected','selected');
       });
       //HOD
       
       // Company 
       cid.change(function (){
            typeName.html(GetLabelOption("Type Name"));
            product.html(GetLabelOption("Product Name"));
            grade.html(GetLabelOption("Grade"));
            color.html(GetLabelOption("Color"));
            size.html(GetLabelOption("Size"));
            
            barcode.val("");
            qrCode.val('');
                         
            $("#txt_type option:first").attr('selected','selected');                      
       });
       // Company
       
       //Product Type
       types.change(function (){
            let managerId = bid.val();
            let productType = $(this).val();
             
            let json = {
                 id: managerId,
                 productType: productType,
                 __RequestVerificationToken: token 
            };
            
            let {data} = GetDataApi("/Other/GetProductTypeNameByProductType", json);
            
            let list = setToSelect({data : data, label: 'Type Name'});
            
            typeName.html(list);
            
            product.html(GetLabelOption("Product Name"));
            grade.html(GetLabelOption("Grade"));
            color.html(GetLabelOption("Color"));
            size.html(GetLabelOption("Size"));
            
            barcode.val("");
            qrCode.val('');
            $("#txt_type option:first").attr('selected','selected');
       });
       //Product Type       
       
       //Type Name 
       typeName.change(function (){
            let json = {
                 id: $(this).val(),
                 __RequestVerificationToken: token 
            };
            
            let {data} = GetDataApi("/Other/GetProductByProductType", json);
                        
            let list = setToSelect({data : data, label: 'Product Name'});
            
            product.html(list);
            
            grade.html(GetLabelOption("Grade"));
            color.html(GetLabelOption("Color"));
            size.html(GetLabelOption("Size"));
            
            barcode.val("");
            qrCode.val('');
            $("#txt_type option:first").attr('selected','selected');
       });
       // Type Name
       
       // Product Name
       product.change(function (){
           let json = {
                id: $(this).val(),
                __RequestVerificationToken: token 
           };                   
          
           let {data} = GetDataApi("/Other/GetProductGradeByProductId", json);
          
           let {grades, colors, sizes} = data;
           
           let listGrade = setToSelect({data : grades, label: 'Grade'});
          
           let listColor = setToSelect({data : colors, label: 'Color'});
           
           let listSize = setToSelect({data : sizes, label: 'Size'});
           
           grade.html(listGrade);
           
           color.html(listColor);
            
           size.html(listSize);
           
           barcode.val("");
           qrCode.val('');
           $("#txt_type option:first").attr('selected','selected');
           
       });
       // Product Name
       
       // Auto complete          
          function AutoComplete(control, url) {
              
              $(control).typeahead({
                  minLength: 1,
                  name: control,
                  highlight: false,
                  source: function (request, response) {
                      $.ajax({
                          url: url,
                          data: {
                              bid: bid.val() !== '' ? bid.val() :  0,
                              value: request,
                              __RequestVerificationToken : token
                          },
                          type: "POST",
                          success: function (data) {
                              response(data);
                          },
                          error: function (response) {
                              console.log(response.responseText);
                          },                          
                      });
                  },
              });
          }
          
          // call
          AutoComplete('#txt_barcode', '/ProductGrade/GetBarcode');
          AutoComplete('#txt_qrCode', '/ProductGrade/GetQrCode'); 
       
       // Area Searching
       
       // select 2      
        function Select2(ctn){
           $(ctn).select2({ width: '100%', placeholder: "Select an Option", allowClear: true });
        }
       // call       
        Select2('#txt_bid');
        Select2('#txt_company');
        Select2('#txt_product_type');
        Select2('#txt_product_type_name');
        Select2('#txt_product_name');
        Select2('#txt_color');
        Select2('#txt_size');
        Select2('#txt_grade');
        Select2('#txt_type');
        Select2('#txt_status');       
        
        let select2 = ['txt_bid','txt_company','txt_product_type','txt_product_type_name','txt_product_name','txt_color','txt_size','txt_grade','txt_type'];
        // change
        
        for (let item in select2){
            $('#' + select2[item]).change(function (){
               LoadStockBalance();         
            });   
        }
        
        // hod
        bid.change(function (){
            $('select#txt_company').val(0).select2();
            $('select#txt_product_type').val(0).select2();
            $('select#txt_product_type_name').val(0).select2();
            $('select#txt_product_name').val(0).select2();
            $('select#txt_color').val(0).select2();
            $('select#txt_size').val(0).select2();
            $('select#txt_grade').val(0).select2();
            $('#txt_barcode').val();
            $('#txt_qrCode').val();
            $('select#txt_type').val(0).select2();
        });        
        
        // company
        cid.change(function (){
            $('select#txt_product_type').val(0).select2();
            $('select#txt_product_type_name').val(0).select2();
            $('select#txt_product_name').val(0).select2();
            $('select#txt_color').val(0).select2();
            $('select#txt_size').val(0).select2();
            $('select#txt_grade').val(0).select2();
            $('#txt_barcode').val();
            $('#txt_qrCode').val();
            $('select#txt_type').val(0).select2();
        }); 
        
        // product type
        types.change(function (){
            $('select#txt_product_type_name').val(0).select2();
            $('select#txt_product_name').val(0).select2();
            $('select#txt_color').val(0).select2();
            $('select#txt_size').val(0).select2();
            $('select#txt_grade').val(0).select2();
            $('#txt_barcode').val();
            $('#txt_qrCode').val();
            $('select#txt_type').val(0).select2();
        });
        
        // type name
        typeName.change(function (){
            $('select#txt_product_name').val(0).select2();
            $('select#txt_color').val(0).select2();
            $('select#txt_size').val(0).select2();
            $('select#txt_grade').val(0).select2();
            $('#txt_barcode').val();
            $('#txt_qrCode').val();
            $('select#txt_type').val(0).select2();
        });
        
        // product name
        product.change(function (){
            $('select#txt_color').val(0).select2();
            $('select#txt_size').val(0).select2();
            $('select#txt_grade').val(0).select2();
            $('#txt_barcode').val();
            $('#txt_qrCode').val();
            $('select#txt_type').val(0).select2();
        });
        
        // color
        color.change(function() {
          $('select#txt_size').val(0).select2();
          $('select#txt_grade').val(0).select2();
          $('#txt_barcode').val();
          $('#txt_qrCode').val();
          $('select#txt_type').val(0).select2();
        });
        
        //size
        size.change(function() {
            $('select#txt_grade').val(0).select2();
            $('#txt_barcode').val();
            $('#txt_qrCode').val();
            $('select#txt_type').val(0).select2();
        }); 
        
        // grade
        grade.change(function (){
            $('#txt_barcode').val();
            $('#txt_qrCode').val();
            $('select#txt_type').val(0).select2();
        });
        
        // barcode onchange
        barcode.change(function (){
            $('#txt_qrCode').val();
            $('select#txt_type').val(0).select2();
        });
        
        // qr code onchange
        qrCode.change(function (){
            $('select#txt_type').val(0).select2();
        });
        
        // barcode
        barcode.keyup(function (){
           LoadStockBalance();    
        });
        
        // qr code
        qrCode.keyup(function (){
            LoadStockBalance();  
        });
        
        // status 
        status.change(function (){
            LoadStockBalance();
        });
    });
    </script>
}
