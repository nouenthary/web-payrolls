@model web_payrolls.Models.tblAnnouncment

@{
    ViewBag.Title = Resources.Voucher.Dashboard;
    ViewBag.Page = Resources.Voucher.Dashboard;
    ViewBag.Main = "Main";
}

<div class="row">
    <!-- Column -->
    <div class="col-lg-3 col-md-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-blue">@Resources.Voucher.CheckIn</h4>
                <div class="text-right">
                    <span class="text-muted">@Resources.Voucher.Today</span>
                    <h1 class="font-light"><sup><i class="ti-arrow-up text-success"></i></sup> 1200</h1>
                </div>
                <span class="text-success">98%</span>
                <div class="progress">
                    <div class="progress-bar bg-success" role="progressbar" style="width: 20%; height: 6px;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </div>
    </div>
    <!-- Column -->
    <!-- Column -->
    <div class="col-lg-3 col-md-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-primary">@Resources.Voucher.NewEmployee</h4>
                <div class="text-right">
                    <span class="text-muted">@Resources.Voucher.Today</span>
                    <h1 class="font-light"><sup><i class="ti-arrow-up text-info"></i></sup> 100</h1>
                </div>
                <span class="text-info">10%</span>
                <div class="progress">
                    <div class="progress-bar bg-info" role="progressbar" style="width: 30%; height: 6px;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </div>
    </div>
    <!-- Column -->
    <!-- Column -->
    <div class="col-lg-3 col-md-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-danger">@Resources.Voucher.DAYOFF</h4>
                <div class="text-right">
                    <span class="text-muted">@Resources.Voucher.Today</span>
                    <h1 class="font-light"><sup><i class="ti-arrow-down text-danger"></i></sup> 100</h1>
                </div>
                <span class="text-danger">10%</span>
                <div class="progress">
                    <div class="progress-bar bg-danger" role="progressbar" style="width: 60%; height: 6px;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </div>
    </div>
    <!-- Column -->
    <!-- Column -->
    <div class="col-lg-3 col-md-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">@Resources.Voucher.AllEmployee</h4>
                <div class="text-right">
                    <span class="text-muted">@Resources.Voucher.Today</span>
                    <h1 class="font-light"><sup><i class="ti-arrow-up text-inverse"></i></sup> 1300</h1>
                </div>
                <span class="text-inverse">99%</span>
                <div class="progress">
                    <div class="progress-bar bg-inverse" role="progressbar" style="width: 80%; height: 6px;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </div>
    </div>
    <!-- Column -->
</div>

