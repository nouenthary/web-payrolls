<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h1 class="text-center text-danger" style="font-family: 'Koulen', cursive;">
                    @Resources.Voucher.Notice
                </h1>               
            </div>          
        </div>
    </div>
</div>

<div class="row">

    <div class="col-md-4">
        <div class="card">
            <img class="card-img-top img-responsive" src="~/Content/Uploads/Announcement/@Model.Picture" style="height: 300px" alt="Card image cap" onerror="this.src=src='@Url.Content("~/Content/images/big/img1.jpg")'">
            <div class="card-body">
                <h2 class="card-title text-danger" style="font-family: 'Nokora', serif;">@Model.Title</h2>
                <p class="card-text">@Model.Descr</p>
                <a href="#" class="btn btn-danger">@Model.Title_Booter</a>
            </div>
        </div>
    </div>


    <div class="col-md-4">
        <div class="card">
            <img class="card-img-top img-responsive" src="~/Content/Uploads/Announcement/@Model.Picture1" style="height: 300px" alt="Card image cap" onerror="this.src=src='@Url.Content("~/Content/images/big/img2.jpg")'">
            <div class="card-body">
                <h2 class="card-title text-danger" style="font-family: 'Nokora', serif;">@Model.Title1</h2>
                <p class="card-text">@Model.Descr1</p>
                <a href="#" class="btn btn-danger">@Model.Title_Booter1</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <img class="card-img-top img-responsive" src="~/Content/Uploads/Announcement/@Model.Picture2" style="height: 300px" alt="Card image cap" onerror="this.src=src='@Url.Content("~/Content/images/big/img6.jpg")'">
            <div class="card-body">
                <h2 class="card-title text-danger" style="font-family: 'Nokora', serif;">@Model.Title2</h2>
                <p class="card-text">@Model.Descr2</p>
                <a href="#" class="btn btn-danger">@Model.Title_Booter2</a>
            </div>
        </div>
    </div>

</div>
